{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "NodeNext",
        "lib": ["dom", "es2022"],
        "jsx": "react-jsx",
        "strict": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": ".erb/dll"
    },
    "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
